<div class="row">
  <div class="col-sm-12">
    <%= form_tag custom_path, method: :get do %>
    <div class="row">
      <div class="col-sm-10">
        <div class="form-group">
          <div class="input-group">
            <%= label_tag :q, "Search for:", class: 'sr-only' %>
            <div class="input-group-addon"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></div>
            <%= text_field_tag :q, nil, class: 'form-control', placeholder: search_placeholder %>
          </div>
        </div>
      </div>
      <div class="col-sm-2">
        <%= submit_tag 'Buscar', class: 'btn btn-xl' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
