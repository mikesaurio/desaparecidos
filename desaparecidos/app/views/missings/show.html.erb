<%require 'find'%>
<%= render "shared/header_show" %>
<br>
<br>
<section id="services">
  <div class="container">
    <hr class="featurette-divider">
    <div class="featurette" id="services">
      <h2 class="featurette-heading"> <%=@missing.name%> </h2>
      <br>
      <br>
      <div class="col-md-3">
        <%unless @missing.picture == 'default'%>
        <%= image_tag "fotos/#{@missing.picture}", :width => "100%", :height => "100%", :align=> "middle", class: "featurette-image img-circle img-responsive pull-left"%>
        <%else%>
        <%= image_tag 'missing-image.gif', class: "featurette-image img-circle img-responsive pull-left"%>
        <%end%>
        <div>
      <br>

      <br>

      <br>
      <div class="col-md-9 jumbotron">
      <%unless @missing.status == 1%>
      <p>SI</p>
      <%else%>
      <p>NO</p>
      <%end%>
     
      <p class="lead"><%=@missing.city%></p>
      <p class="lead"><%=@missing.state%></p>
    </div>
      <%unless @missing.url_audio == nil%>
      <iframe width="100%" height="166" scrolling="no" frameborder="no" src="<%=@missing.url_audio%>&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
      <% end %>
    </div>
      </div>

      <br>
      <br>

      <div class="col-md-9">
         <div class="col-md-1">
      </div>
       <div class="col-md-10">
        <p class="lead"><%=@missing.detail%></p>
      </div>
        
        <div class="col-md-1">
      </div>
      </div>  
       
    </div>
    <hr class="featurette-divider">
    <br>
  </div>
</section>
