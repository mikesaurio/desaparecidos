
<%= render "shared/header_show" %>
<br>
<br>
<section id="services">
  <div class="container">
    <hr class="featurette-divider">
    <div class="featurette" id="services">
      <h2 class="featurette-heading"> <%=@missing.name%> </h2>
      <br>
      <br>
      <div class="col-md-6">
        <%unless @missing.picture == 'default'%>
        <%= image_tag "fotos/#{@missing.picture}", :width => 400, :height => 400, :align=> "middle", class: "featurette-image img-circle img-responsive pull-left"%>
        <%else%>
        <%= image_tag 'missing-image.gif', class: "featurette-image img-circle img-responsive pull-left"%>
        <%end%>
        <div>
      <br>
      <br>
      <%unless @missing.url_audio == nil%>
      <iframe width="100%" height="166" scrolling="no" frameborder="no" src="<%=@missing.url_audio%>&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
      <% end %>
    </div>
      </div>
      <br>
      <br>

      <div class="col-md-6">
        <p class="lead"><%=@missing.detail%></p>
      </div>  
    </div>
    <hr class="featurette-divider">
    <br>
  </div>
</section>
